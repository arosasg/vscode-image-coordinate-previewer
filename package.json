{
  "name": "image-coordinate-previewer",
  "displayName": "Image Coordinate Previewer",
  "description": "Preview images with coordinate information on hover",
  "version": "0.0.4",
  "publisher": "arosasg",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/didit/image-previewer.git"
  },
  "activationEvents": [
    "onCommand:imageCoordinatePreviewer.openImage"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "imageCoordinatePreviewer.openImage",
        "title": "Open Image with Coordinates"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "when": "resourceExtname == '.jpg' || resourceExtname == '.jpeg' || resourceExtname == '.png'",
          "command": "imageCoordinatePreviewer.openImage",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "imageCoordinatePreviewer.openImage"
        }
      ],
      "editor/title/context": [
        {
          "when": "resourceExtname == '.jpg' || resourceExtname == '.jpeg' || resourceExtname == '.png'",
          "command": "imageCoordinatePreviewer.openImage",
          "group": "navigation"
        }
      ]
    },
    "customEditors": [
      {
        "viewType": "imageCoordinatePreviewer.imagePreview",
        "displayName": "Image Coordinate Previewer",
        "selector": [
          {
            "filenamePattern": "*.{jpg,jpeg,png}"
          }
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  }
}
